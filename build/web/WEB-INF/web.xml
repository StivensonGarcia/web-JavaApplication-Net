<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <display-name>TuAplicacionWeb</display-name>
    <!-- Configuración del servlet -->
    <servlet>
        <servlet-name>ControladorUsuario</servlet-name>
        <servlet-class>udec.devweb.stivensonGarcia.controlador.ControladorUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorCancion</servlet-name>
        <servlet-class>udec.devweb.stivensonGarcia.controlador.ControladorCancion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorUsuario</servlet-name>
        <url-pattern>/usuario</url-pattern>
    </servlet-mapping>
    <!-- Configuración de la página de inicio -->
    <servlet-mapping>
        <servlet-name>ControladorCancion</servlet-name>
        <url-pattern>/cancion</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
